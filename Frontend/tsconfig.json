{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "skipLibCheck": true,
    // Remove the explicit types entry and let it be inferred
    // "types": ["vite/client"],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": false,
    "noImplicitAny": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "noEmitOnError": false,
    "importHelpers": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "module": "ESNext",
    "target": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,

  },
  "include": ["./src/**/*"]
}